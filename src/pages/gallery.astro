// Import the layout
import Layout from '../layouts/Layout.astro';
---

// Use the layout
<Layout>
    <section class="gallery">
        <div class="grid">
            <img src="/images/clients/d1.jpeg" alt="Sample Image 1" />
            <img src="/images/clients/d2.jpeg" alt="Sample Image 1" />
            <img src="/images/clients/d3.jpeg" alt="Sample Image 1" />
            <img src="/images/clients/d4.jpeg" alt="Sample Image 1" />
            <img src="/images/clients/d5.jpeg" alt="Sample Image 1" />
            <img src="/images/clients/d6.jpeg" alt="Sample Image 1" />
